<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.danp1t.bean.Organization" table="organization">
        <id name="id" column="id" type="integer">
            <generator class="identity"/>
        </id>

        <property name="name" type="string">
            <column name="name" not-null="true"/>
        </property>

        <many-to-one name="coordinates" class="com.danp1t.bean.Coordinates" column="coordinates_id" not-null="true"/>

        <property name="creationDate" type="java.time.LocalDate">
            <column name="creation_date" not-null="true"/>
        </property>


        <many-to-one name="officialAddress" class="com.danp1t.bean.Location" column="official_address_id" not-null="true"/>

        <property name="annualTurnover" type="float">
            <column name="annual_turnover" not-null="true" check="annual_turnover > 0"/>
        </property>

        <property name="employeesCount" type="long">
            <column name="employees_count" not-null="true" check="employees_count > 0"/>
        </property>

        <property name="rating" type="integer">
            <column name="rating" not-null="true" check="rating > 0"/>
        </property>

        <property name="type">
            <column name="type" not-null="true"/>
        </property>

        <many-to-one name="postalAddress" class="com.danp1t.bean.Address" column="postal_address_id" not-null="true"/>
    </class>
</hibernate-mapping>
