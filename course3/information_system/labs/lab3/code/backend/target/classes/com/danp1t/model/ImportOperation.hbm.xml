<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.danp1t.model.ImportOperation" table="import_operations">
        <id name="id" column="id" type="long">
            <generator class="identity"/>
        </id>

        <property name="fileName" type="string">
            <column name="file_name" not-null="true" length="255"/>
        </property>

        <property name="importDate" type="java.time.LocalDateTime">
            <column name="import_date" not-null="true"/>
        </property>

        <property name="status" type="string">
            <column name="status" not-null="true" length="20"/>
        </property>

        <property name="recordsAdded" type="integer">
            <column name="records_added"/>
        </property>

        <property name="errorMessage" type="string">
            <column name="error_message" length="1000"/>
        </property>

        <many-to-one name="user" class="com.danp1t.model.User" column="user_id" not-null="true"/>
    </class>
</hibernate-mapping>