<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.danp1t.model.User" table="users">
        <id name="id" column="id" type="integer">
            <generator class="identity"/>
        </id>

        <property name="username" type="string">
            <column name="username" not-null="true" length="50"/>
        </property>

        <property name="password" type="string">
            <column name="password" not-null="true" length="100"/>
        </property>

        <property name="role" type="string">
            <column name="role" not-null="true" length="20"/>
        </property>

        <property name="createdAt" type="java.time.LocalDateTime">
            <column name="created_at" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>